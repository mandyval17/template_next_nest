{
  "name": "omni-site",
  "private": true,
  "scripts": {
    "postinstall": "npm install --prefix apps/api && npm install --prefix apps/web",
    "dev": "npm run build:schemas && concurrently -n web,api -c blue,green \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run start:dev --workspace=apps/api",
    "build": "npm run build --workspace=@omni-site/schemas && npm run build --workspaces",
    "build:schemas": "npm run build --workspace=@omni-site/schemas",
    "build:web": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "start:web": "npm run start --workspace=apps/web",
    "start:api": "npm run start:prod --workspace=apps/api",
    "lint": "npm run lint --workspaces --if-present"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
